        "event_types": {
          "process_payment": {
            "frequency": "every 5 minutes",
            "volume": 800
          },
          "fetch_user_data": {
            "frequency": "every 10 minutes",
            "volume": 300
          }
        }
      },
      "database_service": {
        "event_format": {
          "attributes": {
            "db.operation": "string",
