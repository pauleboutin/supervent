            "db.lock.type": "string",
            "db.postgresql.plan_type": "string",
            "db.postgresql.checkpoint_type": "string"
          }
        },
        "allowed_values": {
          "db.operation": ["QUERY", "TRANSACTION", "MAINTENANCE", "REPLICATION"],
